    "fonts": [
      "TimesNewRomanPSMT"
    ],
    "sizes": [
      8.039999961853027,
      12.0
    ]
  },
  {
    "page_number": 3,
    "bbox": [
      72.02,
      728.12,
      312.05,
      756.12
    ],
    "text": "4",
    "fonts": [
      "Aptos",
      "TimesNewRomanPSMT"
    ],
    "sizes": [
      12.0
    ]
  },
  {
    "page_number": 3,
    "bbox": [
      72.02,
      72.49,
      543.09,
      85.77
    ],
