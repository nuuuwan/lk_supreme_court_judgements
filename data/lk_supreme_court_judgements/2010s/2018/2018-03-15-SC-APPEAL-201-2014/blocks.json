    "fonts": [
      "FootlightMTLight"
    ],
    "sizes": [
      14.039999961853027
    ]
  },
  {
    "page_number": 7,
    "bbox": [
      72.02,
      206.02,
      391.06,
      220.06
    ],
    "text": "facilitate enforceability of the Articles of the Covenant.",
    "fonts": [
      "FootlightMTLight"
    ],
    "sizes": [
      14.039999961853027
    ]
  },
  {
    "page_number": 7,
    "bbox": [
      72.02,
      250.45,
      543.61,
      264.49
    ],
