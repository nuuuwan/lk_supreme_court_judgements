    "fonts": [
      "Bookman Old Style"
    ],
    "sizes": [
      12.0
    ]
  },
  {
    "page_number": 2,
    "bbox": [
      99.02,
      688.03,
      543.93,
      702.04
    ],
    "text": "in fact decided do so by document marked 2R5. We therefore hold that",
    "fonts": [
      "Bookman Old Style"
    ],
    "sizes": [
      12.0
    ]
  },
